{
  "name": "front-service",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "simple-git-hooks",
    "check-branch-name": "node .git-hooks/check-branch-name.js",
    "check-ticket-number": "node .git-hooks/check-ticket-number.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "prettier": "^3.2.5",
    "simple-git-hooks": "2.11.1",
    "turbo": "2.1.3",
    "typescript": "5.6.3"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run check-branch-name",
    "commit-msg": "pnpm run check-ticket-number $1 && npx commitlint --edit $1"
  }
}
