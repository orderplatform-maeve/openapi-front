{
  "extends": "@torder/typescript-config/react.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/ui/shims.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/admin-ui"
    },
    {
      "path": "../../packages/client-fetcher"
    },
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/utils"
    }
  ]
}
