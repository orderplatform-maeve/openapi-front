{
  "extends": "@torder/typescript-config/react.json",
  "compilerOptions": {
    "typeRoots": ["./node_module/@types"],
    "types": [
      "@storybook/react",
      "@storybook/addon-actions",
      "@storybook/addon-links",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ],
  "outDir": "./dist"
}
